
<div class="logincontainer">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="email_password_login">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
        <div class="button type"> <%= render "devise/shared/links"%>
        </div>
        <div><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <button type="button" class="btn btn-default" id="btn"><%= f.button :submit, "Log in" %></button>
      </div>
    </div>
  <% end %>
</div>
