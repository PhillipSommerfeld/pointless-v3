<html>
<style>
table, th, td {
   line-height: 150%;
   margin: 2px 2px 2px 2px;
  padding: 2px 2px 2px 2px;
  border-collapse: separate;
  border-spacing: 15px;
  *border-collapse: expression('separate', cellSpacing='10px');
}
</style>
<div class="login-container">
  <table div class="signup-form" border=1 width=80%>
      <thead>
      <tr>
      <th>Transactions</th>
    </tr>
        <tr>
          <th>User</th>
          <th>Item</th>
          <th>Description</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction|%>
          <tr>
            <td><%= transaction.offer.user_id %></td>
            <td><%= transaction.offer.item_name %></td>
            <td><%= transaction.offer.description %></td>
            <td><%= transaction.offer.price %></td>
            <td><%= link_to 'Show', transaction %></td>
            <td><%= link_to 'Edit', transaction %></td>
            <%#<td><%= link_to 'Destroy', transaction, method: :delete, data: %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%# <%= link_to 'New Transaction', new_transaction_path %>
  </div>
</div>
