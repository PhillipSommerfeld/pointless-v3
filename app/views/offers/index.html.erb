<div class="container">
  <div class="main-content">
    <h1>All Items For Sale</h1>
    <div class="cards">
    <%@offers.each do |offer| %>
      <%= link_to offer_path(offer) do %>
        <div class="card-trip">
          <img src="<%=offer.image_url%>" />
          <div class="card-trip-infos">
            <div>
              <h2><%=truncate(offer.item_name, length: 28)%></h2>
              <p><%=truncate(offer.description, :length =>80)%></p>
            </div>
            <h2 class="card-trip-pricing">â‚¬<%=offer.price%></h2>
          </div>
        </div>
      <%end%>
    <%end%>
    </div>
  </div>
</div>

<% if policy(Offer).new? %>
  <%= link_to "Sell an item", new_offer_path %>
<% end %>
